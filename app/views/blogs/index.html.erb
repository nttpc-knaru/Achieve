
<div class="container">
  <div class="wrapper col-md-8 col-md-offset-2 col-sm-10">
    <p><%= notice %></p>
    <h1>ブログ一覧</h1>
    <%= link_to"ブログを作成する",new_blog_path %>
    <% @blogs.each do |blog| %>
      <div class="row">
        <p>タイトル:<%=blog.title %></p>
        <p>本文:<%=blog.content %></p>
        <%=link_to"ブログを編集する",edit_blog_path(blog.id) %>
        <%=link_to"ブログを削除する",blog_path(blog.id), method: :delete, data: {confirm: '本当に削除しますか？'}  %>
      </div>
    <% end %>
  </div>
</div>
