
<div class="container">
  <div class="wrapper col-md-8 col-md-offset-2 col-sm-10">
    <p><%= notice %></p>
    <h1>ブログ一覧</h1>
    <%= link_to"ブログを作成する",new_blog_path %>
    <% @blogs.each do |blog| %>
      <div class="row">
        <%= link_to blog_path(blog) do %>
          <h4><strong><%= blog.title %></strong></h4>
        <% end %>
        <p>本文:<%=blog.content %></p>
        <p>ユーザ名:<%=@users.find(blog.user_id).name %></p>
        <%= profile_img(blog.user) %>
        <%=link_to"ブログを編集する",edit_blog_path(blog.id), class: 'btn btn-default btn-sm btn-success' %>
        <%=link_to"ブログを削除する",blog_path(blog.id), method: :delete, data: {confirm: '本当に削除しますか？'}, class: 'btn btn-default btn-sm btn-danger' %>
      </div>
    <% end %>
  </div>
</div>
